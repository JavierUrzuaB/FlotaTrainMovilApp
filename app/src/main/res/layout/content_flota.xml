<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="dispo.train.fcba.cl.flotatrainmovil.views.FlotaActivity"
    tools:showIn="@layout/activity_flota"
    android:orientation="vertical">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="1">
        <TableRow>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:onClick="onManten">
                <TextView
                    android:id="@+id/tvCantMan"
                    android:layout_height="80dp"
                    android:layout_width="match_parent"
                    android:background="#ff0000"
                    android:textColor="#fff"
                    android:textStyle="bold"
                    android:textSize="40sp"
                    android:text="--"
                    android:gravity="center"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:textColor="@color/colorPrimary"
                    android:text="MANTENCIÃ“N"
                    android:gravity="center"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:onClick="onDisp">
                <TextView
                    android:id="@+id/tvCantDispo"
                    android:layout_height="80dp"
                    android:layout_width="match_parent"
                    android:background="#00de00"
                    android:textColor="#fff"
                    android:textStyle="bold"
                    android:textSize="40sp"
                    android:text="--"
                    android:gravity="center"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:textColor="@color/colorPrimary"
                    android:text="DISPONIBLES"
                    android:gravity="center"/>
            </LinearLayout>
        </TableRow>
    </TableLayout>
    <dispo.train.fcba.cl.flotatrainmovil.helpers.NestedListView
        android:id="@+id/lvFlotaTracto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </dispo.train.fcba.cl.flotatrainmovil.helpers.NestedListView>

</LinearLayout>
