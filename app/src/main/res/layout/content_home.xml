<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="dispo.train.fcba.cl.flotatrainmovil.views.HomeActivity"
    tools:showIn="@layout/activity_home">
    <LinearLayout
        android:layout_width="368dp"
        android:layout_height="551dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteY="8dp"
        tools:layout_editor_absoluteX="8dp">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:stretchColumns="*"
            android:layout_marginTop="40dp"
            >
            <TableRow android:layout_weight="1" >
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    >

                    <Button
                        android:id="@+id/button1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerInParent="true"
                        android:background="@drawable/button_bg_transparent"
                        android:paddingTop="90dp"
                        android:text="Estado Flota Tractocamiones"
                        android:clickable="true"
                        android:textColor="@color/colorPrimary"
                        android:onClick="trenesEnViaje"/>
                    <ImageView
                        android:id="@+id/image1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="@drawable/imagen1"
                        android:layout_centerInParent="true"/>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <Button
                        android:id="@+id/button2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:layout_centerInParent="true"
                        android:background="@drawable/button_bg_transparent"
                        android:clickable="true"
                        android:paddingTop="90dp"
                        android:text="Estado Flota Semirremolques"
                        android:textColor="@color/colorPrimary"
                        android:onClick="trenesEnViajeSM"/>

                    <ImageView
                        android:id="@+id/image2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/imagen2"
                        android:layout_centerInParent="true" />
                </RelativeLayout>
            </TableRow>
            <TableRow android:layout_weight="1" >

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent">

                    <Button
                        android:id="@+id/button3"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerInParent="true"
                        android:background="@drawable/button_bg_transparent"
                        android:ellipsize="marquee"
                        android:paddingTop="90dp"
                        android:onClick="onDispoTC"
                        android:text="Disponibilidad Tractocamiones"
                        android:textColor="@color/colorPrimary"
                        android:clickable="true" />

                    <ImageView
                        android:id="@+id/image3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/imagen3"
                        android:layout_centerInParent="true" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent" >

                    <Button
                        android:id="@+id/button4"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/button_bg_transparent"
                        android:paddingTop="90dp"
                        android:text="Disponibilidad Semirremolques"
                        android:textAlignment="center"
                        android:textColor="@color/colorPrimary"
                        android:clickable="true"
                        android:onClick="onDispoSR"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true" />

                    <ImageView
                    android:id="@+id/image4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                        android:background="@drawable/imagen4"
                    android:layout_centerInParent="true"
                    />
                </RelativeLayout>
            </TableRow>
            <TableRow android:layout_weight="1">

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <Button
                        android:id="@+id/button5"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerInParent="true"
                        android:background="@drawable/button_bg_transparent"
                        android:clickable="true"
                        android:ellipsize="marquee"
                        android:onClick="onSegRetorque"
                        android:paddingTop="90dp"
                        android:text="Seguimiento Retorque"
                        android:textColor="@color/colorPrimary" />

                    <ImageView
                        android:id="@+id/image5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:background="@drawable/imagen3" />
                </RelativeLayout>
            </TableRow>
        </TableLayout>
    </LinearLayout>
</android.support.v4.widget.NestedScrollView>
